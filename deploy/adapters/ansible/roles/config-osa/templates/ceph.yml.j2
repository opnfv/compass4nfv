# The infra nodes where the Ceph mon services will run
ceph-mon_hosts:
{% for host in groups.ceph_mon%}
  {{host}}:
    ip: {{ hostvars[host]['ansible_ssh_host'] }}
{% endfor %}

# The nodes that the Ceph OSD disks will be running on
ceph-osd_hosts:
{% for host in groups.ceph_osd%}
  {{host}}:
    ip: {{ hostvars[host]['ansible_ssh_host'] }}
{% endfor %}

